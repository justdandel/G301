{% extends 'base.html.twig' %}

{% block body %}
<style> body{
   background-color: goldenrod;  
} </style>

<script>
    function deleteConfirm() {
        if (confirm("Are you sure to delete!")) {
            return true;
        } else {
            return false;
        }
    }
</script>

<div class="title">
<h1 style="text-align:center">Admin Manager</h1>
</div>

<table id="tableproduct" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th style="border: 1px solid black; font-weight: bold; text-align:center"><strong>Product ID</strong></th>
                <th style="border: 1px solid black; font-weight: bold; text-align:center"><strong>Product Name</strong></th>
                <th style="border: 1px solid black; font-weight: bold; text-align:center"><strong>Price</strong></th>
                <th style="border: 1px solid black; font-weight: bold; text-align:center"><strong>Quantity</strong></th>
                <th style="border: 1px solid black; font-weight: bold; text-align:center"><strong>Description</strong></th>
                <th style="border: 1px solid black; font-weight: bold; text-align:center"><strong>Image</strong></th>
                <th style="border: 1px solid black; font-weight: bold; text-align:center"><strong>Edit</strong></th>
                <th style="border: 1px solid black; font-weight: bold; text-align:center"><strong>Delete</strong></th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                    <td align='center' style="border: 1px solid black; font-weight: bold;">{{product.id}}</td>
                    <td align='center' style="border: 1px solid black; font-weight: bold;">{{product.name}}</td>
                    <td align='center' style="border: 1px solid black; font-weight: bold;">{{product.price}}$</td>
                    <td align='center' style="border: 1px solid black; font-weight: bold;">{{product.quantity}}</td>
                    <td align='center' style="border: 1px solid black; font-weight: bold; max-width: 300px;">{{product.description}}</td>
                    <td align='center' style="border: 1px solid black; font-weight: bold;">
                        <img src='{{product.img}}' border='1px' width="150" height="150" />
                    </td>
                    <td align='center' style="border: 1px solid black;"><a href="" >edit </a>
                </td>
                    <td align='center' style="border: 1px solid black;"><a href="{{path('admin_del', {'id' : product.id})}}"  onclick="return deleteConfirm()">remove</a>
                </td>
                </tr>
        {% endfor %}
        </tbody>
</table>
<div style=" text-align: center;"class="betb">
    <a style="padding-top: -10px; font-weight: bold;" href="{{ path('app_logout') }}">Logout</a>
    <a style="padding-left: 50px; font-weight: bold;" href="">Add New</a>
    </div>
{% endblock %}
